<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommenceAnalysisActivity">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/analysingProgressBar"
        android:indeterminate="true"
        android:visibility="gone"/>

    <com.canhub.cropper.CropImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:visibility="visible"
        android:id="@+id/analysisCropImageView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetImgFromCamera"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:paddingRight="1dp"
            android:paddingLeft="1dp"
            android:text="@string/txtGetImgFromCamera"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetImgFromGallery"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/txtGetImgFromGallery"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chooseCalibParam"
        android:enabled="false"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:text="@string/btnTextChooseParam"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showResultsBtn"
        android:enabled="false"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:text="@string/btnTextShowResults"/>

</LinearLayout>